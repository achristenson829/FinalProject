@using Northwind.Models
@model Discount
<h2 class="mt-3">Add Discount</h2>

<form method="post" asp-action="AddDiscount">
    <div asp-validation-summary="All" style="color:red;"></div>
    <input type="hidden" name="DiscountId" value="@Model.DiscountId" />
    <input type="hidden" name="Code" value="@Model.Code" />
    <div class="form-row">
        <div class="form-group col-md-6">
    
            <input asp-for="@Model.Discount.Title" class="form-control" placeholder="Title" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Description">Description</label>
            <input asp-for="@Model.Description" class="form-control" placeholder="Description" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.StartTime">Start Time</label>
            <input type="datetime" asp-for="@Model.StartTime" class="form-control" placeholder="mm/dd/yyyy" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.EndTime">End Time</label>
            <input type="datetime" asp-for="@Model.EndTime" class="form-control" placeholder="mm/dd/yyyy" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.ProductId">Product Id</label>
            <input asp-for="@Model.ProductId" class="form-control" placeholder="Product Id" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.DiscountPercent">Discount Percent</label>
            <input asp-for="@Model.DiscountPercent" class="form-control" placeholder="Discount Percent" />
        </div>
    </div>

    <button type="submit" class="btn btn-outline-primary">Save</button>
</form>